{
    "name": "DAv2 Zero-Shot Test",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "dataset": "dsec",
        "datapath": "/home/luca/Scrivania/datasets/DSEC",
        "split": "validation",
        "concatenate_sequences": false,
        "slicing": {
            "slicing_type": "sbt",
            "time_window_ms": 50
        },
        "event_representation": {
            "representation_type": "tencode",
            "normalize": true
        },
        "preprocessing": [
            {
                "preprocessing_type": "CenterCrop",
                "height": 320,
                "width": 640
            }
        ],
        "load_images": false,
        "use_voxels": true,
        "batch_size": 1,
        "num_workers": 1,
        "pin_memory": false,
        "shuffle": false,
        "sequence_window": 1,
        "sequence_step": 1,
        "all_events": true
    },
    "model": {
        "model_type": "RecDAv2",
        "encoder": "vits",
        "activation": "softplus",
        "scale_factor": 1.0,
        "inv_prediction": true,
        "input_size_width": 644,
        "input_size_height": 322,
        "freeze_encoder": false,
        "input_channels": 3,
        "recurrent_block_type": "convlstm"
    }
}